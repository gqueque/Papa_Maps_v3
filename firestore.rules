rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Permite que QUALQUER USUÁRIO LOGADO leia as coleções
    // de eventos, sugestões e usuários.
    match /{collectionName}/{docId} {
      allow read: if request.auth != null;
    }

    // Regras de escrita permanecem mais restritas
    match /events/{eventId} {
      allow write: if request.auth != null; // Apenas logados podem escrever
    }

    match /users/{userId} {
      // Um usuário só pode ATUALIZAR seus próprios dados
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    match /suggestions/{suggestionId} {
      allow create: if request.auth != null; // Apenas logados podem criar
    }
  }
}