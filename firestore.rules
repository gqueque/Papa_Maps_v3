


rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regra ATUALIZADA para a coleção de Eventos
    match /events/{eventId} {
      // QUALQUER UM (visitantes, usuários) pode ler a lista de eventos.
      allow read: if true;
      // APENAS ADMINS podem criar, atualizar ou deletar eventos.
      allow write: if request.auth.token.admin == true;
    }

    // Regra ATUALIZADA para a coleção de Usuários
    match /users/{userId} {
      // ADMINS podem listar (e contar) todos os usuários.
      allow list: if request.auth.token.admin == true;
      // Um usuário (admin ou não) pode ler e escrever seus próprios dados.
      allow read, write: if request.auth.uid == userId;
    }

    // Regra ATUALIZADA para a coleção de Sugestões
    match /suggestions/{suggestionId} {
      // ADMINS podem ler a lista toda.
      allow list: if request.auth.token.admin == true;
      // Qualquer usuário logado pode criar uma sugestão.
      allow create: if request.auth != null;
    }
  }
}